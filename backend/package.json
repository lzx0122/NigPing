{
  "name": "nigping-backend",
  "version": "1.0.0",
  "description": "Backend server for NigPing",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:all": "concurrently \"pnpm run dev\" \"pnpm run admin:dev\" --names \"backend,admin\" --prefix-colors \"blue,magenta\"",
    "start": "node dist/index.js",
    "build": "pnpm run admin:build && tsc",
    "admin:dev": "cd admin-ui && pnpm run dev",
    "admin:build": "cd admin-ui && pnpm install && pnpm run build"
  },
  "dependencies": {
    "@hono/node-server": "^1.8.0",
    "@supabase/supabase-js": "^2.91.1",
    "@types/bcryptjs": "^3.0.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "type": "module"
}
