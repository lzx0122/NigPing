{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nigping",
  "version": "0.1.0",
  "identifier": "com.asus.nigping",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "NigPing",
        "width": 1280,
        "height": 800,
        "resizable": false,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["bin/wg-engine", "bin/wg-tool"]
  }
}
